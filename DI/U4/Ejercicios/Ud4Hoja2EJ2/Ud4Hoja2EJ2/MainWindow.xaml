<Window x:Class="Ud4Hoja2EJ2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ud4Hoja2EJ2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="700">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="tbCantidad" HorizontalAlignment="Left" Margin="37,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,34,0,0" TextWrapping="Wrap" Text="Cantidad" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbPlazo" HorizontalAlignment="Left" Margin="209,53,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="1" IsSelected="True"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="15"/>
            <ComboBoxItem Content="20"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="209,34,0,0" TextWrapping="Wrap" Text="Plazo" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Margin="369,57,0,0" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="271">
            <RadioButton x:Name="rdoBaja" Content="3%  "/>
            <RadioButton x:Name="rdoMedia" Content="5%  "/>
            <RadioButton x:Name="rdoAlta" Content="7%"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="369,34,0,0" TextWrapping="Wrap" Text="Tasa de interes" VerticalAlignment="Top"/>
        <Button x:Name="btnPago" Content="Calcular pago mensual" IsDefault="True" HorizontalAlignment="Left" Margin="526,55,0,0" VerticalAlignment="Top" Width="141" Click="btnPago_Click"/>
        <TextBlock x:Name="tbMensualidad" HorizontalAlignment="Left" Margin="37,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="312"/>
        <Button x:Name="btnReset" Content="Reiniciar" HorizontalAlignment="Left" Margin="526,95,0,0" VerticalAlignment="Top" Width="141" Click="btnReset_Click"/>
        <Button x:Name="btnSalir" Content="Salir" IsCancel="True" HorizontalAlignment="Left" Margin="526,138,0,0" VerticalAlignment="Top" Width="141" Click="btnSalir_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,105,0,0" TextWrapping="Wrap" Text="Pago mensual" VerticalAlignment="Top"/>

    </Grid>
</Window>
